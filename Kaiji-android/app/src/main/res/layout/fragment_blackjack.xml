<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.gurigoro.kaiji_android.BlackjackFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/blackjack_main_listview" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="終了"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blackjack_end_button"
                android:visibility="gone"
                android:layout_weight="1" />

            <Button
                android:text="エントリー"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blackjack_entry_button"
                android:layout_weight="1" />

            <Button
                android:text="スタート"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blackjack_start_button"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
